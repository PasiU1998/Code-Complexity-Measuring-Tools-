@model IEnumerable<ITPM_Code_Complexity_Tool.Models.CdueToSize>

@{
    Layout = null;

    var fromURL = Request.Params["fileName"];

    if (fromURL == null)
    {
        foreach (var name in ViewBag.FILES_FROM_UPLOAD)
        {
            fromURL = name.FILE_NAME;
        }

    }
}

<!DOCTYPE html>
<link href="~/Content/style1.css" rel="stylesheet" />
<link href="~/Content/Cize,Variable,Methods_CSS.css" rel="stylesheet" />
<body>

    <h1 style="color:white;">Displaying the complexity of a program due to Size</h1>

    <div align="right">
        <input class="button button3" type="button" value="Calculate Complexity due to Variables" onclick="location.href='../ComplexitySizeVariablesMethods/ComplexityVariables?fileName=@fromURL'" />   &nbsp;  &nbsp;    <input class="button button3" type="button" value="Calculate Complexity due to Methods" onclick="location.href='../ComplexitySizeVariablesMethods/ComplexityMethods?fileName=@fromURL'" />
    </div><br /><br />


                <table style="color: black;">
                    <tr id="ROW1">
                        <td>Line No</td>
                        <td>Code Line</td>
                        <td>Nkw</td>
                        <td>Nid</td>
                        <td>Nop</td>
                        <td>Nnv</td>
                        <td>Nsl</td>
                        <td>Cs</td>
                    </tr>

                    @{
                        foreach (var item in Model)
                        {
                            <tr style="padding:23px;">
                                <td> @item.lineNo </td>
                                <td> @item.CODELINE </td>
                                @if (item.keywordCount != 0)
                                {
                                    <td> @item.keywordCount </td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.identifires != 0)
                                {
                                    <td> @item.identifires </td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.operatorCount != 0)
                                {
                                    <td> @item.operatorCount </td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.numricalCount != 0)
                                {
                                    <td> @item.numricalCount </td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                @if (item.stringLiteral != 0)
                                {
                                    <td> @item.stringLiteral </td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                <td> @item.CI </td>

                            </tr>


                        }


                    }
                <tr id="ROW1">
                    <td> Total </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        @ViewBag.TotalCs
                    </td>

                    </tr>
                </table>
</body>
